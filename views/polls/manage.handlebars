<div class="row">
    <div class="col-lg-12">
        <h3>Manage Polls</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-header">All Users</div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Poll Nane</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each polls as |poll| }}
                            <tr>
                                <th scope="row">1</th>
                                <td> {{ this.name }}</td>
                                <td> some date </td>
                                <td> <a href="/polls/{{this.id}}/show" class="link-primary">View Poll</a></td>
                                 <input type="hidden"  name="poll_id" value={{this.id}}>
                            </tr>
                        {{/each}} 
                    </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>